    <main>
        <main>
            <div class="top"><a href="/login"><img src="img/seta-esquerda.png" alt=""><p>Voltar</p></a></div>
            <div class="container">
                <div class="cadastro">
                    <h1>Fazer Cadastro:</h1>
                    <form action="/cadastro" method="post">
                    <div class="divisor">
                        <div class="one">

                        <label for="nc">Nome Completo</label>
                        <input type="text" name="nome" id="cn">

                        <label for="nu">Nome de Usuario</label>
                        <input type="text" name="nome_usu" id="nu">

                        <label for="email">E-mail</label>
                        <input type="text" name="email" class="email" id="email">

                        </div>
                        <div class="two">
                        <div class="wrap">
                        <div>
                        <label for="tel ">Celular</label>
                        <input type="text" name="celular" id="tel" class="w50 telefone">
                        </div>

                        <div>
                        <label for="cpf w50">CPF</label>
                        <input type="text" name="cpf" id="cpf" class="w50 cpf">
                        </div>

                        </div>
                        
                        <label for="Senha">Senha</label>
                        <input type="password" name="senha" id="senha">

                        </div>
                    </div>
                        <input type="submit" value="Fazer cadastro">
                        </form>
                        <div class="log">
                        <h2>JÃ¡ tem uma conta? <a href="/login">Entrar</a></h2>
                    </div>
                </div>
            </div>
    </main>











